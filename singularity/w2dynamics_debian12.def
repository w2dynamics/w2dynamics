Bootstrap: docker
From: debian:12
Stage: build

%environment
    export LC_ALL=C

%post
#   INSTALL PREREQUISITE PACKAGES
    DEBIAN_FRONTEND=noninteractive apt-get update -y
    DEBIAN_FRONTEND=noninteractive apt-get upgrade -y
    DEBIAN_FRONTEND=noninteractive apt-get install -y --no-install-recommends ca-certificates make cmake git gfortran-12 g++-12 gcc-12 libopenblas0-serial libopenblas-serial-dev libfftw3-dev openmpi-bin python3 libpython3-dev python3-distutils python3-h5py-serial python3-mpi4py python3-scipy python3-configobj

#   FETCH AND BUILD W2DYNAMICS
    git clone https://github.com/w2dynamics/w2dynamics.git
    cd w2dynamics
    mkdir build
    cd build
    export CC=/usr/bin/gcc-12
    cmake .. \
          -DOPT_HOST_ARCH=OFF \
          -DCMAKE_Fortran_COMPILER=gfortran-12 \
	  -DCMAKE_C_COMPILER=gcc-12 \
	  -DCMAKE_CXX_COMPILER=g++-12 \
	  -DCMAKE_INSTALL_PREFIX=/usr
    make VERBOSE=1
    ctest --output-on-failure
    make install


Bootstrap: docker
From: debian:12
Stage: final

%environment
    export LC_ALL=C

%files from build
    /usr/bin/DMFT.py
    /usr/bin/cthyb
    /usr/bin/hgrep
    /usr/bin/Maxent.py
    /usr/lib/python3.11/site-packages/w2dyn /usr/lib/python3.11/dist-packages/w2dyn

%post
#   INSTALL REQUIREMENTS
    DEBIAN_FRONTEND=noninteractive apt-get update -y
    DEBIAN_FRONTEND=noninteractive apt-get upgrade -y
    DEBIAN_FRONTEND=noninteractive apt-get install -y --no-install-recommends openssh-client libgfortran5 libstdc++6 libopenblas0-serial libfftw3-double3 openmpi-bin python3 python3-h5py-serial python3-mpi4py python3-scipy python3-configobj
    DEBIAN_FRONTEND=noninteractive apt-get clean -y
    rm -rf /var/lib/apt/lists


%apprun DMFT.py
    exec python3 /usr/bin/DMFT.py "$@"

%apprun cthyb
    exec python3 /usr/bin/cthyb "$@"

%apprun hgrep
    exec python3 /usr/bin/hgrep "$@"

%apprun Maxent.py
    exec python3 /usr/bin/Maxent.py "$@"